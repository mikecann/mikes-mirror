{
  "name": "mikes-mirror",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "cd voice_recognition && yarn install",
    "build": "yarn build:scripts && yarn build:resources",
    "build:scripts": "tsc",
    "build:resources": "cpx -v src/resources/**/* dist",
    "watch:scripts": "yarn build:scripts -w",
    "watch:resources": "yarn build:resources -w",
    "start": "electron ./dist/main.js",
    "start:prod": "cross-env NODE_ENV=production ELECTRON_ENABLE_LOGGING=1 DISPLAY=:0 yarn start",
    "dev": "yarn build && concurrently -n scripts,resources,electron \"yarn watch:scripts\" \"yarn watch:resources\" \"yarn start\" ",
    "deploy": "git pull && yarn install && yarn build && yarn start:prod && yarn deploy"
  },
  "dependencies": {
    "@types/howler": "^2.0.5",
    "@types/moment": "^2.13.0",
    "@types/react": "^16.3.12",
    "@types/react-dom": "^16.0.5",
    "@types/react-spinkit": "^3.0.3",
    "@types/react-transition-group": "1.x",
    "@types/shelljs": "^0.7.8",
    "@types/systeminformation": "^3.23.0",
    "concurrently": "^3.5.1",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.4",
    "csstips": "^0.2.3",
    "csx": "^8.5.0",
    "electron": "^1.8.4",
    "electron-reload": "^1.2.2",
    "howler": "^2.0.9",
    "mobx": "^4.3.1",
    "mobx-react": "^5.2.0",
    "moment": "^2.22.2",
    "natural-language-commander": "^0.2.0",
    "python-shell": "^0.5.0",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "react-particles-js": "^2.1.1",
    "react-transition-group": "1.x",
    "rss-parser": "^3.1.2",
    "shelljs": "^0.8.1",
    "systeminformation": "^3.38.0",
    "tslint": "^5.9.1",
    "typescript": "^2.6.2",
    "typestyle": "^1.7.2"
  }
}
