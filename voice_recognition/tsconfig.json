{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": ".",
    "baseUrl": ".",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "*.ts",
  ]
}